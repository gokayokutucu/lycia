<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net8.0;net9.0</TargetFrameworks>
        <LangVersion>preview</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <SuppressProjectReferenceDependenciesWhenPacking>true</SuppressProjectReferenceDependenciesWhenPacking>
        <RepositoryUrl>https://github.com/gokayokutucu/lycia</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup>
        <!-- Attach a custom target to include "reference project" outputs under lib/<tfm>/ -->
        <TargetsForTfmSpecificBuildOutput>
            $(TargetsForTfmSpecificBuildOutput);_Lycia_IncludeInternalLibs
        </TargetsForTfmSpecificBuildOutput>
    </PropertyGroup>

    <PropertyGroup>
        <!-- Switch: when true, use a NuGet dependency on Lycia instead of local project refs during pack/build -->
        <UsePackageRefForLyciaOnPack>false</UsePackageRefForLyciaOnPack>
    </PropertyGroup>

    <ItemGroup Condition="'$(UsePackageRefForLyciaOnPack)' != 'true'">
        <!-- Local dev: reference projects directly (won't flow as NuGet deps due to PrivateAssets=All) -->
        <ProjectReference Include="..\Lycia.Messaging\Lycia.Messaging.csproj" PrivateAssets="All"/>
    </ItemGroup>

    <ItemGroup Condition="'$(UsePackageRefForLyciaOnPack)' == 'true'">
        <ProjectReference Remove="..\Lycia.Messaging\Lycia.Messaging.csproj"/>
    </ItemGroup>

    <Target Name="_Lycia_IncludeInternalLibs" DependsOnTargets="Build" Condition="'$(UsePackageRefForLyciaOnPack)' != 'true'">
        <!-- Ensure we query outputs for the current TFM -->
        <PropertyGroup>
            <_Lycia_CurrentTFM>$(TargetFramework)</_Lycia_CurrentTFM>
        </PropertyGroup>

        <!-- Ask referenced projects for their TargetPath for this TFM -->
        <MSBuild Projects="@(ProjectReference)"
                 Targets="GetTargetPath"
                 Properties="TargetFramework=$(_Lycia_CurrentTFM)"
                 BuildInParallel="true">
            <Output TaskParameter="TargetOutputs" ItemName="_Lycia_InternalAssemblies"/>
        </MSBuild>

        <ItemGroup>
            <!-- Shipp the referenced project outputs as-is -->
            <BuildOutputInPackage Include="@(_Lycia_InternalAssemblies)"/>

            <!-- Include matching XML docs when present -->
            <_Lycia_InternalXmlDocs Include="@(_Lycia_InternalAssemblies->'%(RootDir)%(Directory)%(Filename).xml')"
                                    Condition="Exists('%(RootDir)%(Directory)%(Filename).xml')"/>
            <BuildOutputInPackage Include="@(_Lycia_InternalXmlDocs)"/>
        </ItemGroup>
    </Target>

    <ItemGroup>
        <PackageReference Include="Nerdbank.GitVersioning" Version="3.*" PrivateAssets="all"/>
        <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="9.0.9"/>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.9"/>
        <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.9"/>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3"/>
        <PackageReference Include="Scrutor" Version="6.0.1"/>
        <PackageReference Include="System.Configuration.ConfigurationManager" Version="9.0.9"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath=""/>
    </ItemGroup>

</Project>
